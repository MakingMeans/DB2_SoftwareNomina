document.getElementById('editCargoForm').addEventListener('submit', function (e) {
                e.preventDefault();

                const id = document.getElementById('editCargoId').value.trim();
                const nombre = document.getElementById('editCargoNombre').value.trim();

                if (!nombre) {
                    alert('El nombre del cargo no puede estar vacÃ­o');
                    return;
                }

                fetch(`/api/cargos/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ nombre })
                })
                .then(response => {
                    if (!response.ok) throw new Error('Error al actualizar el cargo');
                    return response.json();
                })
                .then(data => {
                    $('#editCargoModal').modal('hide');
                    alert('Cargo creado exitosamente');
                    document.querySelector('.nav-link[data-page="cargos.html"]').click();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('No se pudo actualizar el cargo');
                });
            });

<div id="editCargoModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editCargoForm">
                    <div class="modal-header">
                        <h4 class="modal-title">Editar Cargo</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="editCargoId">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" class="form-control" id="editCargoNombre" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-secondary" data-dismiss="modal" value="Cancelar">
                        <input type="submit" class="btn btn-success" value="Guardar">
                    </div>
                </form>
            </div>
        </div>
    </div>    
